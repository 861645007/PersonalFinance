# Uncomment this line to define a global platform for your project
# platform :ios, “8.0”
use_frameworks!

target "PersonalFinance" do 	
	
# 图表
	pod 'Charts'
# bug 管理 
	pod 'Fabric'
	pod 'Crashlytics' 
# ReactiveCocoa
	pod 'ReactiveCocoa', '~> 4.0.4-alpha-4'
# Core Data
	pod 'MagicalRecord'
	pod 'MagicalRecord/CocoaLumberjack'
# 网络图片操作
	pod 'SDWebImage', '~> 3.7.4'
# 空页面视图填充
	pod 'DZNEmptyDataSet', '~> 1.7.3'
# 动画效果
	pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift2'
# NSDate 操作工具
	pod 'SwiftDate'
# 引导页
	pod 'Onboard'
# 数字键盘
	pod 'MMNumberKeyboard'
# 时间选择器
	pod 'PDTSimpleCalendar', '~> 0.9.1'
# 一个可自定义的弹出框
	pod "SimpleAlert"
# 密码锁
	pod 'VENTouchLock', '~> 1.11.0'
# 进度条显示器
	pod "MBCircularProgressBar"
# 脉冲动画
	pod "PulsingHalo"

end

